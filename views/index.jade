			label #{allowedCourse[i].description}&nbsp
			input(type="checkbox", name="allowedCourse", value='#{allowedCourse[i].searchValue}') 
			&nbsp
		- }
		h3 Allergy
		hr
		- for (var i = 0; i < allowedAllergy.length; ++i) {
			label #{allowedAllergy[i].shortDescription}&nbsp
			input(type="checkbox", name="allowedAllergy", value='#{allowedAllergy[i].searchValue}') 
			&nbsp
		- }
		h3 Diet
		hr
		- for (var i = 0; i < allowedDiet.length; ++i) {
			label #{allowedDiet[i].shortDescription}&nbsp
			input(type="checkbox", name="allowedDiet", value='#{allowedDiet[i].searchValue}') 
			&nbsp
		- }
